<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/success_banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Booking Success"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/information_banner"
        app:layout_constraintTop_toBottomOf="@id/success_banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/host_name_header"
        android:text="Name"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/information_banner"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="@id/information_banner"
        android:layout_marginTop="15dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/host_name"
        android:text="Host ka naam"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/host_name_header"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="@id/information_banner"
        android:layout_marginTop="15dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/booking_header"
        android:text="Booking Id: "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/information_banner"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/host_name_header"
        android:layout_marginTop="15dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/booking_text_view"
        android:text="Booking ID"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/booking_header"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/host_name_header"
        android:layout_marginTop="15dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Hotel_name_header"
        android:text="Hotel name: "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/information_banner"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/booking_header"
        android:layout_marginTop="15dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hotel_name_text_view"
        android:text="Hotel Name"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/Hotel_name_header"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/booking_text_view"
        android:layout_marginTop="15dp"

        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>