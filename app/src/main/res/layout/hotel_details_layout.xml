<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_text_view"
        android:text="Guest Name: "
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        />

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/name_text_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:hint="John Snow"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_text_view"
        android:text="Phone number: "
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_edit_text"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        />

    <EditText
        android:id="@+id/number_edit_text"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:hint="8922983923"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/number_text_view"
        app:layout_constraintTop_toBottomOf="@id/name_edit_text"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/age_text_view"
        android:text="Age: "
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_edit_text"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        />

    <EditText
        android:id="@+id/age_edit_text"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:hint="34"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/number_text_view"
        app:layout_constraintTop_toBottomOf="@id/number_edit_text"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender_text_view"
        android:text="Gender: "
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/age_edit_text"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/gender_text_view"
        app:layout_constraintTop_toBottomOf="@id/age_edit_text"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="male" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="female" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="others" />
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/divider"
        android:layout_marginTop="-15dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        android:text="____________________________________________________________"
        />



</androidx.constraintlayout.widget.ConstraintLayout>